{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<h2 class="mb-4">Nova Postagem</h2>
<div class="card">
    <form action="/admin/postagens/edit" method="POST">
        <div class="card-body">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Titulo:</label>
            <input type="text" class="form-control" name="titulo" id="nome" value="{{postagem.titulo}}" placeholder="titulo do post">

            <label for="slug">Slug:</label>
            <input type="text" class="form-control" name="slug" value="{{postagem.slug}}" placeholder="slug do post">

            <label for="descricao">Descricao:</label>
            <input type="text" class="form-control" name="descricao" id="slug" value="{{postagem.descricao}}" placeholder="slug do post">

            <label for="conteudo">Conteudo:</label>
            <textarea name="conteudo" placeholder="conteudo"  class="form-control">{{postagem.conteudo}}</textarea>

            <label for="categoria">Categoria:</label>
            <select name="categoria" class="custom-select" >
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma postagem registrada</option>
                {{/each}}
            </select>
            <br>
            <button type="submit" class="btn btn-success mt-4">Criar Postagem</button>
        </div>
    </form>
</div>